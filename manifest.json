{
  "name": "Edge Plus",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "",
  "browser_action": {
    "default_title": "Edge Plus"
  },
  "permissions": [
    "https://*/*",
    "tabs",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "content_scripts" : [{
    "js": ["lib/jquery-1.12.4.js","modules/fw/fw.js"],
    "all_frames": true,
    "css": ["modules/fw/fw.css"],
    "matches": ["<all_urls>"],
    "run_at": "document_idle"
  }]
}